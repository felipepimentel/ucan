/* Conversation List */
#conversationList {
    background: var(--surface);
    border-radius: var(--border-radius-lg);
    margin: var(--spacing-md);
    padding: var(--spacing-md);
    border: 1px solid var(--border);
    box-shadow: var(--shadow-sm);
    min-width: 280px;
}

#conversationList:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-md);
}

/* Header */
#listHeader {
    background: var(--gradient-bg);
    border-bottom: 1px solid var(--border);
    padding: var(--spacing-md);
    border-radius: var(--border-radius-lg) var(--border-radius-lg) 0 0;
    margin-bottom: var(--spacing-md);
}

#listTitle {
    font-size: 20px;
    font-weight: 600;
    color: var(--text);
    margin-bottom: var(--spacing-xs);
}

#listSubtitle {
    font-size: 14px;
    color: var(--text-secondary);
    margin-top: var(--spacing-xs);
}

/* Search */
#searchBox {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--border-radius-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    margin-bottom: var(--spacing-md);
    color: var(--text);
    font-size: 14px;
}

#searchBox:focus {
    border-color: var(--primary);
    box-shadow: var(--shadow-sm);
}

#searchBox:hover {
    border-color: var(--primary-hover);
}

#searchBox::placeholder {
    color: var(--text-secondary);
}

/* List Items */
#conversationItem {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--border-radius-sm);
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
    transition: var(--transition-normal);
}

#conversationItem:hover {
    border-color: var(--primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
}

#conversationItem:selected {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
}

#conversationTitle {
    font-size: 16px;
    font-weight: 600;
    color: var(--text);
    margin-bottom: var(--spacing-xs);
}

#conversationPreview {
    font-size: 14px;
    color: var(--text-secondary);
    margin-top: var(--spacing-xs);
    line-height: 1.5;
}

#conversationMeta {
    font-size: 12px;
    color: var(--text-secondary);
    margin-top: var(--spacing-xs);
}

/* Empty State */
#emptyState {
    text-align: center;
    padding: var(--spacing-xl);
    color: var(--text-secondary);
}

#emptyIcon {
    font-size: 48px;
    margin-bottom: var(--spacing-md);
    opacity: 0.5;
}

#emptyText {
    font-size: 16px;
    margin-bottom: var(--spacing-sm);
}

#emptySubtext {
    font-size: 14px;
    color: var(--text-secondary);
}

/* Loading State */
#loadingState {
    text-align: center;
    padding: var(--spacing-xl);
}

#loadingSpinner {
    margin-bottom: var(--spacing-md);
}

#loadingText {
    font-size: 14px;
    color: var(--text-secondary);
}

/* Error State */
#errorState {
    text-align: center;
    padding: var(--spacing-xl);
    color: var(--error);
}

#errorIcon {
    font-size: 48px;
    margin-bottom: var(--spacing-md);
}

#errorText {
    font-size: 16px;
    margin-bottom: var(--spacing-sm);
}

#errorSubtext {
    font-size: 14px;
    color: var(--text-secondary);
}

/* Buttons */
#newButton {
    background: var(--primary);
    color: white;
    border: none;
    border-radius: var(--border-radius-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    font-size: 14px;
    font-weight: 600;
    margin-top: var(--spacing-md);
    transition: var(--transition-fast);
}

#newButton:hover {
    background: var(--primary-hover);
}

#newButton:pressed {
    background: var(--primary-active);
}

/* Scrollbar */
#conversationList QScrollBar:vertical {
    background: transparent;
    width: 8px;
    margin: 2px;
}

#conversationList QScrollBar::handle:vertical {
    background: var(--border);
    border-radius: var(--border-radius-xs);
    min-height: 60px;
}

#conversationList QScrollBar::handle:vertical:hover {
    background: var(--primary);
}

#conversationList QScrollBar::add-line:vertical,
#conversationList QScrollBar::sub-line:vertical {
    height: 0;
}

#conversationList QScrollBar::add-page:vertical,
#conversationList QScrollBar::sub-page:vertical {
    background: none;
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

#conversationItem {
    animation: fadeIn 0.3s ease-out;
}

/* Responsive */
@media (max-width: 768px) {
    #conversationList {
        margin: var(--spacing-sm);
        padding: var(--spacing-sm);
    }

    #listHeader {
        padding: var(--spacing-sm);
    }

    #listTitle {
        font-size: 18px;
    }

    #listSubtitle {
        font-size: 13px;
    }

    #conversationItem {
        padding: var(--spacing-sm);
    }

    #conversationTitle {
        font-size: 15px;
    }

    #conversationPreview {
        font-size: 13px;
    }
} 